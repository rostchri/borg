!!! XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :'xml:lang' => "de", :lang => "de" }
	%head
		%title
			- unless current_user.nil?
				BORG - Root of all content
			- else
				BORG
		%meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
		= favicon_link_tag asset_path('favicon.ico'), :type => "image/x-icon"
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
		= auto_discovery_link_tag :rss, torrentfeed_path
		= auto_discovery_link_tag :rss, sfilefeed_path
	%body
		.container-fluid
			= render "layouts/headnavigation" unless current_user.nil?
			.row-fluid
				#leftsidebar.span2
					= yield :leftsidebar
				#maincontent.span10
					.container-fluid
						= yield