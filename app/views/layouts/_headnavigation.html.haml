#navigation
	= nav_bar :brand => "Borg - Root of all content", :responsive => false, :fluid => true do

		.btn-group
			= link_to "#", :class => "btn btn-primary" do
				%i{:class => "icon-user icon-white"}
				User
				= link_to "#", :class => "btn btn-primary dropdown-toggle", :"data-toggle" => "dropdown" do
					%span{:class => "caret"}
				%ul{:class => "dropdown-menu"}
					%li
						= link_to "#" do
							%i{:class => "icon-pencil"}
								Edit
					%li
						= link_to "#" do
							%i{:class => "icon-trash"}
								Delete
					%li
						= link_to "#" do
							%i{:class => "icon-ban-circle"}
								Ban
					%li{:class=>"divider"}
					%li
						= link_to "#" do
							%i{:class => "i"}
								Make admin

		= menu_group :pull => :right do
			= navsearchfield params[:by_plot].nil?  ? "Inhaltsuche" : params[:by_plot],  {:id => "plotsearch", :action => movies_path}, "by_plot"
			= navsearchfield params[:by_title].nil? ?  "Titelsuche" : params[:by_title], {:id => "titlesearch" , :action => movies_path},"by_title"

