%span{:class => "label label-info", :rel => "tooltip", :title => "Deutscher Titel"}
	= movie.localtitle
%span.label.label-info{:rel => "tooltip", :title => "Erscheinungsjahr"}
	= movie.year
%small
	%em
		%span.label{:rel => "tooltip", :title => "Original Titel"}
			= movie.originaltitle
	= link_to "#{movie.imdbid}", "http://www.imdb.de/title/#{movie.imdbid}",  :rel => "tooltip", :title => "IMDB"
	- unless movie.imdbid.nil?
		- if ((imdbvalid=movie.imdbvalid?) || movie.imdbinvalid?)
			= railstrap_image(imdbvalid ? "status/verified.png" : "status/unverified.png", nil, :rel=> "tooltip", :title => imdbvalid ? "verified" : "unverified")
		- else
			= railstrap_image(movie.localtitle_topdirectory_match? ? "status/questionmark.png" : "status/exclamationmark.png" , nil, :rel=> "tooltip", :title => movie.localtitle_topdirectory_match? ? "IMDB-Info stimmt mit Verzeichnisnamen überein" : "IMDB-Info stimmt NICHT mit Verzeichnisnamen überein")