- title_path_mismatch = movie.path.topdirectory != movie.localtitle
%ul{:class => "movie icons swipe"}
	%li{:class => "icon-film"}
		= render("movies/title", :movie => movie, :title_path_mismatch => title_path_mismatch)
	%li{:class => "icon-tags"}
		= render(:partial =>"genres/genres", :object => movie.genres)
	%li{:class => "icon-heart"}
		= render("movies/rating", :movie => movie)
	%li{:class => "icon-book"}
		=# render("modaldetails", :movie => movie)
		= link_to movie.plot[0..250], movie_path(movie)
	%li{:class => "icon-facetime-video"}
		= render("movies/techinfos", :movie => movie)
	%li{:class => "icon-folder-open"}
		= render("mediapath/mediapath", :mediapath => movie.path, :title_path_mismatch => title_path_mismatch) 
	%li{:class => "icon-hdd"}
		= render(:partial => "mediafiles/mediafile", :object => movie.file)

