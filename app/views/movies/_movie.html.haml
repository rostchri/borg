%ul{:class => "movie icons"}
	%li{:class => "icon-film"}
		= render("title", :movie => movie)
	%li{:class => "icon-tags"}
		= render(:partial =>"genres/genres", :object => movie.genres)
	%li{:class => "icon-heart"}
		= render("rating", :movie => movie)
	%li{:class => "icon-book"}
		=# render("modaldetails", :movie => movie)
		= link_to movie.plot[0..380], movie_path(movie)
	%li{:class => "icon-facetime-video"}
		= render("techinfos", :movie => movie)
	%li{:class => "icon-folder-open"}
		= render("mediapath/mediapath", :mediapath => movie.path, :title_path_mismatch => movie.path.topdirectory != movie.localtitle) 
	%li{:class => "icon-hdd"}
		= render(:partial => "mediafiles/mediafile", :object => movie.file)

